// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String    @id @unique
  email         String    @unique
  password_hash String
  fullName      String
  Storage       Storage[]

  @@map("users")
}

model Storage {
  id            String  @id @unique
  password      String
  account       String
  usageLocation String
  link          String?
  description   String?

  user   Users  @relation(fields: [userId], references: [id])
  userId String

  @@map("storages")
}
